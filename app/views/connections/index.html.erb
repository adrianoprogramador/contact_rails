<br>
<div class="basic-grey">
  <script>
    $.notify("<%= notice %>", "success");
  </script>


<h1><%="#{t('messages.listing')} #{@connections.model.model_name.human(count: @connections.count)}"%></h1>

<table>
  <thead>
    <tr>
      <th><%= @connections.model.human_attribute_name("name") %></th>
      <th><%= @connections.model.human_attribute_name("kind_id") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr style="background-color: <%= cycle('white', 'lightgrey') %>">
        <td><%= connection.name %></td>
        <td><%= connection.kind.description %></td>
        <td><%= link_to t('buttons.show'), connection %></td>
        <td><%= link_to t('buttons.edit'), edit_connection_path(connection) %></td>
        <td><%= link_to t('buttons.destroy'), connection, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @connections %>

<br>

<%= link_to t('buttons.new'), new_connection_path, class: "btn btn-primary" %>
<%= link_to t('buttons.home'), root_path, class: "btn btn-success" %>
</div>